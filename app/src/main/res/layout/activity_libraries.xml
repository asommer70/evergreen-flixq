<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thehoick.evergreenflixq.Libraries">


    <!--<ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@android:id/list"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />-->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/libraryDvdTitle"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/libraries"
        android:stretchColumns="2"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/libraryDvdTitle">

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nameLabel"
                android:text="@string/name_label"
                android:padding="3dip"
                android:layout_width="match_parent" />
            <TextView
                android:text="@string/library_status"
                android:id="@+id/libraryStatusLabel"
                android:gravity="right"
                android:padding="3dip"
                android:layout_width="match_parent" />
        </TableRow>

    </TableLayout>
</RelativeLayout>
